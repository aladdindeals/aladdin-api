<tr>
  <td class="px-4 py-4 text-sm font-medium whitespace-nowrap">
    <div>
      <h2 class="font-medium text-gray-800 dark:text-white "><%= product_url.partner.name %></h2>
      <p class="text-sm font-normal text-gray-600 dark:text-gray-400">
        <span><%= product_url.url.truncate(3) %></span>
        <a href="<%= product_url.url %>" target="_blank">Show link</a>
      </p>
    </div>
  </td>

  <td class="px-12 py-4 text-sm font-medium whitespace-nowrap">
    <div class="inline px-3 py-1 text-sm font-normal rounded-full gap-x-2 bg-emerald-100/60 <%= status_tag(product_url.scraping_status) %>"><%= product_url.scraping_status.humanize %></div>
  </td>

  <td class="px-4 py-4 text-sm whitespace-nowrap">
    <div>
      <h4 class="text-gray-700 dark:text-gray-200 whitespace-nowrap overflow-hidden truncate max-w-xs" title="<%= product_url.parsed_data&.dig('name') || "Not fetched" %>"><%= product_url.parsed_data&.dig('name') || "Not fetched" %></h4>
    </div>
  </td>

  <td class="px-4 py-4 text-sm whitespace-nowrap">
    <div>
      <h4 class="text-gray-700 dark:text-gray-200"><%= product_url.failure_reason || "NA" %></h4>
    </div>
  </td>

  <td class="px-4 py-4 text-sm whitespace-nowrap">
    <div>
      <h4 class="text-gray-700 dark:text-gray-200"><%= product_url.time_taken_in_seconds.present? ? "#{product_url.time_taken_in_seconds} sec" : '-' %> </h4>
    </div>
  </td>

  <td class="px-4 py-4 text-sm whitespace-nowrap">
    <% if product_url.scraping_status == 'processing' %>
      <div class="animate-spin inline-block w-5 h-5 border-[3px] m-auto border-current border-t-transparent text-gray-800 rounded-full dark:text-white" role="status" aria-label="loading">
        <span class="sr-only">Loading...</span>
      </div>
    <% else %>
      <%= link_to product_url_path(product_url), class: "px-1 py-1 text-gray-500 transition-colors duration-200 rounded-lg dark:text-gray-300" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 12.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 18.75a.75.75 0 110-1.5.75.75 0 010 1.5z"/>
        </svg>
      <% end %>
    <% end %>
  </td>
</tr>
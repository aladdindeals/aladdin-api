<div class="w-full px-4 sm:w-1/2 lg:w-1/4">
  <a href="javascript:void(0)" class="group mb-10 block text-center">
    <div class="mb-5 overflow-hidden rounded-lg">
      <%= image_tag('category-item', alt: "category", class: "w-full") %>
    </div>
    <h3 class="mb-1 text-xl font-semibold text-black group-hover:text-primary md:text-2xl lg:text-xl xl:text-2xl">
      <!--  Category name-->
      <%= category_name %>
    </h3>
    <p class="text-base font-medium text-body-color">
      <!--  Product count -->
      <%= pluralize_category(product_count) %>
    </p>
  </a>
</div>